                <li><%= link_to t(:users), users_path %></li>
                <li><%= link_to t(:roles), roles_path %></li>
                <li><%= link_to t(:formalities_document), formalities_documents_path %></li>
              <!--  <li><%= link_to 'Añadir Roles/Usuarios', users_roles_path %></li> -->
                <li><%= link_to t(:reference), references_path %></li>
                <li><%= link_to t(:reference_lists), reference_lists_path %></li>
                <li><%= link_to t(:employees), employees_path %></li>
            <% end %>
        <% end %>
        
        
        <!-- Messages: style can be found in dropdown.less-->
        <li class="dropdown messages-menu">
          <!-- Menu toggle button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-envelope-o"></i>
            <span class="label label-success">4</span>
          </a>
          <ul class="dropdown-menu">
            <li class="header">You have 4 messages</li>
            <li>
              <!-- inner menu: contains the messages -->
              <ul class="menu">
                <li><!-- start message -->
                  <a href="#">
                    <div class="pull-left">
                      <!-- User Image -->
                      <% if current_user.genre == 'm'%>
                      <%= image_tag "user2-160x160.jpg" , :class=>"img-circle", :alt=>"User Image"%>
                      <% else %>
                      <%= image_tag "female_user.png" , :class=>"img-circle", :alt=>"User Image"%>
                      <% end %>
                    </div>
                    <!-- Message title and timestamp -->
                    <h4>
                      Support Team
                      <small><i class="fa fa-clock-o"></i> 5 mins</small>
                    </h4>
                    <!-- The message -->
                    <p>Why not buy a new awesome theme?</p>
                  </a>
                </li>
                <!-- end message -->
              </ul>
              <!-- /.menu -->
            </li>
            <li class="footer"><a href="#">See All Messages</a></li>
          </ul>
        </li>
        <!-- /.messages-menu -->

        <!-- Notifications Menu -->
        <li class="dropdown notifications-menu">
          <!-- Menu toggle button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bell-o"></i>
            <span class="label label-warning">10</span>
          </a>
          <ul class="dropdown-menu">
            <li class="header">You have 10 notifications</li>
            <li>
              <!-- Inner Menu: contains the notifications -->
              <ul class="menu">
                <li><!-- start notification -->
                  <a href="#">
                    <i class="fa fa-users text-aqua"></i> 5 new members joined today
                  </a>
                </li>
                <!-- end notification -->
              </ul>
            </li>
            <li class="footer"><a href="#">View all</a></li>
          </ul>
        </li>
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <!-- The user image in the navbar-->
            <% if current_user.avatar.present? %>
              <%= image_tag (current_user.avatar.url), :class=>"user-image" , :alt=>"User Image"%>
            <% else %>
              <% if current_user.genre == "m"%>
                  <%= image_tag "user2-160x160.jpg" , :class=>"user-image" , :alt=>"User Image"%>
              <% else %>
                  <%= image_tag "female_user.png" , :class=>"user-image",  :alt=>"User Image"%>
              <% end %>
            <% end %>
            <!-- hidden-xs hides the username on small devices so only the image appears. -->
            <% if current_user.first_name.empty? %>
            <span class="hidden-xs"><%= current_user.username%></span>
            <% else %>
            <span class="hidden-xs"><%= current_user.first_name.camelize(:upper) %></span>
            <span class="hidden-xs"><%= current_user.last_name.camelize(:upper) %></span>
            <% end%>
          </a>
          <ul class="dropdown-menu">
            <!-- The user image in the menu -->
            <li class="user-header">
              <% if current_user.avatar.present? %>
              <%= image_tag (current_user.avatar.url), :class=>"img-circle" , :alt=>"User Image"%>
              <% else %>
                <% if current_user.genre == "m"%>
                  <%= image_tag "user2-160x160.jpg" , :class=>"img-circle" , :alt=>"User Image"%>
                <% else %>
                  <%= image_tag "female_user.png" , :class=>"img-circle",  :alt=>"User Image"%>
                <% end %>
              <% end %>
              <p>
                <%= current_user.first_name.capitalize %>
                <%= current_user.middle_name.capitalize %>
                <%= current_user.last_name.capitalize %>
                <small>Miembro desde <%= current_user.created_at.to_s(:short) %></small> 
              </p>
            </li>
            <!-- Menu Body -->
<!--            <li class="user-body">
              <div class="row">
                <div class="col-xs-4 text-center">
                  <a href="#">Followers</a>
                </div>
                <div class="col-xs-4 text-center">
                  <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                  <a href="#">Friends</a>
                </div>
              </div>
              &lt;!&ndash; /.row &ndash;&gt;
            </li>-->
            <% end %>
            <!-- Menu Footer-->
            <% if !current_user.nil? %>
              <li class="user-footer">
                <div class="pull-left">
                    <a href="#" class="btn btn-default btn-flat">Perfil</a>
                </div>
                <div class="pull-right">
                   <%= link_to destroy_user_session_path, method: :delete do %>
                      <a class="btn btn-default btn-flat"> Cerrar sesión </a>
                   <% end %>
                </div>
              </li>
            </ul>
          </li>
          <!-- Control Sidebar Toggle Button -->
            <li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <i class="fa fa-gears"></i></a>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to destroy_user_session_path, method: :delete do %>
                        <i class="glyphicon glyphicon-log-out"></i> Cerrar sesión
                        <% end %>
                      </li>
              <% if current_user.has_role? :admin %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to new_user_invitation_path do %>
                        <i class="glyphicon glyphicon-envelope"></i> Invitar
                    <% end %>
                  </li>
              <% end %>
            <% else %> 
                <!-- Control Sidebar Toggle Button -->
                <li>
                  <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-gears"></i></a>
                  <ul class="dropdown-menu">
                      <li>
                        <%= link_to destroy_user_session_path, method: :delete do %>
                            <i class="glyphicon glyphicon-log-out"></i> SALIR
                        <% end %>
                 </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
  <%end%>
      
