<div class="row">
  <div class="col-md-12">
    <div class="panel panel-user panel-info">
      <div class="panel-heading center"><%= t("user") %></div>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-3">
              <div class="img-avatar-circle center-block">
                <%= image_tag @user.avatar_url(:thumb).to_s if @user.avatar? %>
                <% unless @user.avatar? %>
                    <%= image_tag "user_default_male.png" if @user.genre == 'm' %>
                    <%= image_tag "user_default_female.png" if @user.genre == 'f' %>
                <% end %>
              </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-9">
              <div class="form-group">
                <label for="username" class="control-label col-sm-5 col-md-4"><%= t("user") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.username %></p>
                </div>

                <label for="first_name" class="control-label col-sm-5 col-md-4"><%= t("first_name") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.first_name %></p>
                </div>

                <label for="middle_name" class="control-label col-sm-5 col-md-4"><%= t("middle_name") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.middle_name %></p>
                </div>

                <label for="last_name" class="control-label col-sm-5 col-md-4"><%= t("last_name") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.last_name %></p>
                </div>

                <label for="genre" class="control-label col-sm-5 col-md-4"><%= t("genre") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.genre == 'm' ? t("genres.male") : t("genres.female") %></p>
                </div>

                <label for="identification_document" class="control-label col-sm-5 col-md-4"><%= t("identification_document") %>
                  :</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.identification_document %></p>
                </div>

                <label for="birthday" class="control-label col-sm-5 col-md-4"><%= t("birthday.short") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.birthday %></p>
                </div>

                <label for="email" class="control-label col-sm-5 col-md-4"><%= t("email.short") %>:</label>
                <div class="col-sm-7 col-md-8">
                  <p class="form-control-static"><%= @user.email %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <left>
      <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to t('edit'), edit_user_path(@user), class: 'btn btn-info' %>
            <%= link_to t('back'), users_path, class: 'btn btn-info' %>
          </div>
      </div>
      </left>
    </div>
   
  </div>
</div>
