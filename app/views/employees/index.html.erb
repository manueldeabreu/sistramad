<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to t('index.listing_employees'), employees_path %></li>
  <li><%= link_to t('index.new_employee'), new_employee_path %></li>
</ul>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>User</th>
      <th><%=	t('type_employee.long') %></th>
      <th><%=	t('scale_classification.short') %></th>
      <th><%=	t('scale_category.short') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.user.username %></td>
          <td><%= employee.type_employee.name %></td>
          <td><%= employee.scale_classification.name %></td>
          <td><%= employee.scale_category.name %></td>
          <td>
            <div class="btn-toolbar">
              <div class="btn-group btn-group-xs">
                <%= link_to 'Mostrar Info Completa', employee, class: 'btn btn-info list' %>
                <%= link_to 'Editar empleado', edit_employee_path(employee), class: 'btn btn-primary list' %>
                <%= link_to 'Eliminar', employee, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger list' %>
              </div>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @employees %></br>
<%= page_entries_info @employees %>

<br><br>

<%= link_to new_employee_path, class: 'btn btn-info btn-sm list' do %>
    <i class="glyphicon glyphicon-plus"></i> <%= t('index.new_employee') %>
<% end %>