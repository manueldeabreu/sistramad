<div class="container"> 
  <div class="well"> 
    <div>
      <p><strong> <h3 class="text-center background-image: asset-url('work.jpg') background-size: cover">Listado de solicitudes: </h3> </strong></p>
    </div>
    <br>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Usuario</th>
              <th>Nombre</th>
              <th>Cédula</th>
              <th>Correo electronico</th>
              <th>Solicitud </th>
              <th>Código de trámite</th>
              <th>Fecha creacion</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @procedures.each do |procedure| %>
              <tr>
                <td><%= procedure.user.username %></td>
                <td><%= procedure.user.first_name%> <%= procedure.user.last_name%></td>
                <td><%= procedure.user.identification_document %></td>
                <td><%= procedure.user.email %></td>
                <td><%= procedure.name %> </td>
                <td><%= procedure.code %></td>
                <td><%= procedure.created_at.strftime("%Y-%m-%d") %></td>
                <td>
                  <div class="btn-toolbar">
                    <div class="btn-group btn-group-xs">
                      <%= link_to 'Consultar', admin_procedure_path(procedure) , class: 'btn btn-primary list' %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @procedures %></br>
      <%= page_entries_info @procedures %>
  </div>
</div>
