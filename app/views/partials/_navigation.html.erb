            <li><%= link_to t(:reference_lists), reference_lists_path %></li>
            <li><%= link_to t(:formalities_document), formalities_documents_path %></li>
            <li><%= link_to t(:reference), references_path %></li>
            <li><%= link_to t(:reference_lists), reference_lists_path %></li>
