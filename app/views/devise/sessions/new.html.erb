                <div class="form-group">
                  <label for="username" class="control-label col-sm-5 col-md-4"><%= t("user") %>:</label>
                  <div class="col-sm-7 col-md-8">
                    <p class="form-control-static">test</p>
                  </div>
                  <label for="Password" class="control-label col-sm-5 col-md-4"><%= t("password") %>:</label>
                  <div class="col-sm-7 col-md-8">
                    <p class="form-control-static">123456</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4 ">
      <div class="panel panel-primary ">
        <div class="panel-heading text-center"><%= t('sign_in.log_in') %></div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form'}) do |f| %>
              <%= f.error_notification %>

              <% if alert %>
                  <p><%= alert %></p>
              <% end %>

              <%= f.input :login, :label_html => {:class => "sr-only"}, autofocus: true, placeholder: t('sign_in.login_input') %>
              <%= f.input :password, :label_html => {:class => "sr-only"}, autocomplete: "off", placeholder: t('sign_in.password') %>

              <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, t("devise.sessions.remember_me") %></br>
              <% end %>

              <%= f.button :submit, value: t('sign_in.sign_in'), class: 'form-control btn btn-primary' %>

          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
