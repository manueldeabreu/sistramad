<h1>Lista de Usuarios y Roles asociados</h1>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Lista de Asociaciones Usuario/Rol ', users_roles_path %></li>
  <li><%= link_to 'Nueva Asociación Usuario/Rol ', new_users_role_path %></li>
</ul>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th> Usuario </th>
      <th> Rol </th>
    </tr>
    </thead>

    <tbody>
    <% @users_roles.each do |users_role| %>
        <tr>
          <td><%= users_role.user.username %></td>
          <td><%= users_role.role.name %></td>
          <td>
            <div class="btn-toolbar">
              <div class="btn-group btn-group-xs">
                
                
              </div>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @users_roles %></br>
<%= page_entries_info @users_roles %>

<br><br>

<%= link_to new_users_role_path, class: 'btn btn-info btn-sm list' do %>
    <i class="glyphicon glyphicon-plus"></i> Nueva Asociación
<% end %>
