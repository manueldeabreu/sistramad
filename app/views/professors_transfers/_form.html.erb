<%= javascript_include_tag 'professors_transfers' %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading center"> Tr√°mite de Traslado </div>
      <div class="panel-body">
        <%= simple_form_for @professors_transfer, :html => {:multipart => true, :class => "form-horizontal"},
                            wrapper: :horizontal_file_input_sistramad,
                            wrapper_mappings: {
                                file: :horizontal_file_input_sistramad
                            } do |pf| %>
            <%= pf.error_notification %>

            <% if @professors_transfer.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@professors_transfer.errors.count, "error") %> prohibited this user from being saved:</h2>

                  <ul>
                    <% @professors_transfer.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-9">
                <%= pf.label :type_of_translate, "Tipo de Traslado:  " %></br>
                <%= collection_select(:professors_transfer,:type_of_translate,@reference,:id,:name,{ :prompt => "Seleccione Tipo de Traslado"},{ :class => "type_selection"}) %></br></br>
                <%= pf.label :faculty_from_id , "Origen:  " %></br>
                <%= pf.collection_select :faculty_from_id, @reference_lists_from, :id, :name, {:prompt => "Seleccione Origen"}, {:class=>"from_selection"}  %></br></br>
                <%= pf.label :faculty_to_id , "Destino:  " %></br>
                <%= pf.collection_select :faculty_to_id, @reference_lists_to, :id, :name, {:prompt => "Seleccione Destino"}, {:class=>"to_selection"}  %>
              </div>
            </div>            
          <center>
              <div class="col-md-12">
                <%= pf.button :submit, value: "Guardar", class: ' btn btn-info' %>
              </div>
          </center>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
